<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.d44ntje.repsapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/editTextREP2"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/editTextREP1"
        app:layout_constraintTop_toTopOf="@+id/editTextREP1" />

    <EditText
        android:id="@+id/editTextREP3"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/editTextREP2"
        app:layout_constraintTop_toTopOf="@+id/editTextREP2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Reps"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="205dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="ADD"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="23dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        android:layout_marginBottom="0dp" />

    <EditText
        android:id="@+id/editTextREP1"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/buttonShowList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show list"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editExercis"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:layout_marginRight="19dp"
        android:ems="10"
        android:hint="Exercises Name"
        android:inputType="textPersonName"
        app:layout_constraintRight_toLeftOf="@+id/buttonAdd"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAdd"
        android:layout_marginBottom="0dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editExercis"
        android:layout_marginRight="55dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sec"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="144dp"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
